<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sveit.Views.GenrePage"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="Genres">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_filter_list_white_24dp" Order="Primary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Pesquisar gênero..." Style="{StaticResource SearchBarStyle}" HeightRequest="52"/>
            <ListView ItemsSource="{Binding Genres}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Spacing="10" Margin="20">
                                <Label Text="{Binding Name}" TextColor="#FFFFFF"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>